{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "gpt-oss",
  "autoupdate": true,
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss": {
          "name": "gpt-oss"
        }
      }
    }
  },
  "mcp": {
    // Using mcp-remote proxy until this is resolved: https://github.com/sst/opencode/issues/988
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.context7.com/mcp"],
      "enabled": true
    },
    "notion": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.notion.com/mcp"],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://api.githubcopilot.com/mcp/"],
      "enabled": true
    },
    "datadog": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.datadoghq.com/api/unstable/mcp-server/mcp"],
      "enabled": true
    },
    "arxiv-mcp-server": {
      "type": "local",
      "command": [
        "uvx",
        "arxiv-mcp-server",
        "--storage-path",
        "/Users/devon/data/arxiv-mcp-server"
      ],
      "enabled": true
    }
  },
  "agent": {
    "docs": {
      "description": "Write documentation across a codebase.",
      "prompt": "{file:./prompts/docs.md}"
    },
    "research": {
      "description": "Research code and provide a summary of the findings.",
      "prompt": "{file:./prompts/research.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "datadog*": false
      }
    },
    "plan": {
      "description": "Propose a plan for implementing a task.",
      "prompt": "{file:./prompts/plan.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "datadog*": false,
        "arxiv*": false
      }
    },
    "validate": {
      "description": "Propose a plan for implementing a task.",
      "prompt": "{file:./prompts/validate.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "datadog*": false,
        "arxiv*": false
      }
    },
    "rfc": {
      "description": "Create a high-level description of a large project.",
      "prompt": "{file:./prompts/rfc.md}",
      "tools": {
        "bash": false,
        "datadog*": false
      }
    }
  }
}
