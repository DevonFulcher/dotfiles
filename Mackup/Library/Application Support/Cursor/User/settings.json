{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "analysis.autoImportCompletions": true,
    "analysis.typeCheckingMode": "basic",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 4,
    "formatting.provider": "none",
    "testing.pytestEnabled": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "updateImportsOnFileMove.enabled": "always"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "updateImportsOnFileMove.enabled": "always"
  },
  "breadcrumbs.enabled": true,
  "cursor.cpp.disabledLanguages": ["plaintext", "markdown", "scminput"],
  "debug.allowBreakpointsEverywhere": true,
  "editor.accessibilitySupport": "off",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingOvertype": "never",
  "editor.autoClosingQuotes": "never",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.fontFamily": "'Monaspace Neon', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 18,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.inlineSuggest.enabled": true,
  "editor.renderWhitespace": "all",
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/.git": false
  },
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/site-packages/**": true
  },
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",
  "githubPullRequests.pullBranch": "never",
  "go.formatTool": "gofmt",
  "go.toolsManagement.autoUpdate": true,
  "indentRainbow.colors": [
    "rgba(255,255,64,0.15)",
    "rgba(127,255,127,0.15)",
    "rgba(255,127,255,0.15)",
    "rgba(79,236,236,0.15)"
  ],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "makefile.configureOnOpen": false,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },
  "notebook.formatOnSave.enabled": true,
  "notebook.lineNumbers": "on",
  "python.analysis.inlayHints.callArgumentNames": "all",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.venvFolders": ["${workspaceFolder}/.venv"],
  "python.venvPath": "${workspaceFolder}/.venv",
  "redhat.telemetry.enabled": false,
  "remote.autoForwardPortsSource": "hybrid",
  "ruff.configurationPreference": "filesystemFirst",
  "ruff.lint.extendSelect": [
    // A superset of the recommended rules here: https://docs.astral.sh/ruff/linter/#rule-selection
    "RUF", // Ruff-specific rules
    "E", // pycodestyle
    "F", // Pyflakes
    "PL", // Pylint
    "UP", // pyupgrade
    "B", // flake8-bugbear
    "SIM", // flake8-simplify
    "I" // isort
  ],
  "ruff.interpreter": ["${workspaceFolder}/.venv/bin/python"],
  "search.exclude": {
    "**/.git": true,
    "**/node_modules/*/**": true,
    "**/site-packages/**": true
  },
  "search.useGlobalIgnoreFiles": true,
  "security.promptForLocalFileProtocolHandling": false,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.inheritEnv": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.customTitleBarVisibility": "never",
  "window.title": "${dirty}${separator}${activeEditorShort}${separator}${activeRepositoryBranchName}${separator}${rootName}${separator}${profileName}",
  "window.titleBarStyle": "native",
  "window.zoomLevel": 1.5,
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.reduceMotion": "on",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true,
  "workbench.trustedDomains.promptInTrustedWorkspace": false,
  "update.releaseTrack": "prerelease",
  "cursor.general.gitGraphIndexing": "enabled",
  "cursorpyright.analysis.inlayHints.callArgumentNames": "all",
  "cursorpyright.analysis.inlayHints.functionReturnTypes": true,
  "cursorpyright.analysis.inlayHints.variableTypes": true,
  "cursor.composer.shouldAllowCustomModes": true,
  "cursor-retrieval.canAttemptGithubLogin": false,
  "python.languageServer": "None",
  "workbench.colorTheme": "Default Dark Modern",
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  }
}
